# Server Configuration
PORT=8080
NODE_ENV=production

# Google Cloud Configuration
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Splunk Enterprise Configuration (for local Splunk with tunnel)
# TODO: Replace with your tunnel endpoint URL (e.g., http://localhost:8088 or http://tunnel-url:8088)
SPLUNK_HEC_ENDPOINT=http://localhost:8088
# TODO: Replace with your Splunk HEC token
SPLUNK_HEC_TOKEN=YOUR_SPLUNK_HEC_TOKEN

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=product-recommendations-api
OTEL_LOG_LEVEL=info
